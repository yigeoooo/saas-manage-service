<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.saas.titan.modules.role.dao.RoleMasterDao">

    <select id="getRoleList" resultType="com.saas.titan.modules.role.dto.RoleMasterDto">
        select
            role_id,
            role_name,
            insert_user_id,
            insert_time,
            status
        from
            role_master
    </select>

    <update id="changeStatus">
        UPDATE role_master
        SET
            status = !status
        where
            role_id = #{roleId};
    </update>

</mapper>
